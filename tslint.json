{
 "extends": [
  "tslint:recommended",
  "tslint-eslint-rules",
  "tslint-react",
  "tslint-react-hooks",
  "tslint-config-airbnb"
 ],
 "jsRules": {
  "quotemark": [
   true,
   "single",
   "avoid-escape",
   "avoid-template",
   "jsx-double"
  ]
 },
 "rules": {
  "align": [true, "parameters"],
  "import-name": false,
  "increment-decrement": [true, "allow-post"],
  "jsx-no-lambda": false,
  "max-line-length": [true, { "limit": 120, "ignore-pattern": "^import" }],
  "no-console": [false, "log", "warn"],
  "no-else-after-return": false,
  "no-increment-decrement": false,
  "object-shorthand-properties-first": false,
  "prefer-array-literal": [true, { "allow-type-parameters": true }],
  "prefer-readonly": true,
  "semicolon": [true, "always", "strict-bound-class-methods"],
  "ter-arrow-parens": [true, "always"],
  "ter-indent": [true, 4, { "SwitchCase": 1 }],
  "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
  "whitespace": [
   true,
   "check-branch",
   "check-decl",
   "check-module",
   "check-operator",
   "check-preblock",
   "check-separator"
  ]
 }
}
